<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inc.rhino.rhinoguard.MainActivity"
    android:background="@drawable/bg">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shutdownicon"
            app:layout_column="0"
            app:layout_row="2"
            android:id="@+id/imageButton"
            android:background="@drawable/roundedcorners"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="offKill"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendMessage"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/carplaceholder"
            android:id="@+id/imageButton13"
            android:background="@drawable/roundedcorners"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carchanginglanes"
            android:id="@+id/imageButton6"
            app:layout_column="1"
            app:layout_row="0"
            android:background="@drawable/roundedcorners"
            android:onClick="shutdownCar"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/policecar"
            android:id="@+id/imageButton7"
            app:layout_row="1"
            app:layout_column="1"
            android:elevation="2dp"
            android:background="@drawable/roundedcorners"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onReport"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/poweronicon"
            android:id="@+id/imageButton12"
            app:layout_row="2"
            app:layout_column="1"
            android:elevation="2dp"
            android:background="@drawable/roundedcorners"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onKill" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fleetmgnt"
            android:id="@+id/imageButton11"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="registerCar"
            android:background="@drawable/roundedcorners"
            android:padding="9dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </android.support.v7.widget.GridLayout>




</RelativeLayout>
